<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springboot3java21demo.mapper.UserDao">
    <!--新增所有列-->
    <insert id="insert" parameterType="org.example.springboot3java21demo.domain.User">
        insert into student(id, name, age)
        values (#{id}, #{name}, #{age})
    </insert>

    <!--    <select id="findAll" resultType="org.example.springboot3java21demo.domain.User">-->
    <!--        select *-->
    <!--        from user-->
    <!--    </select>-->

    <select id="findById" resultType="org.example.springboot3java21demo.domain.User">
        select
        <if test="true">
            id, code,
        </if>
        name, age
        from user
        where id in
        <foreach collection="condition.ids" item="item" index="index" separator="," open="(" close=")">
            #{item}
        </foreach>
    </select>

    <select id="findUserById" resultType="org.example.springboot3java21demo.domain.User">
        select *
        from user
        where id in
        <foreach collection="condition.ids" item="item" index="index" separator="," open="(" close=")">
            #{item}
        </foreach>
    </select>


</mapper>